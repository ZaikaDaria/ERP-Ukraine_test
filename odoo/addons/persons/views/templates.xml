<template id="persons_template">
    <t t-foreach="persons" t-as="person">
        <div class="person-card">
            <h3><t t-esc="person.full_name"/></h3>
            <p t-if="person.sex">Sex: <t t-esc="person.sex"/></p>
            <p>Age: <t t-esc="person.age"/></p>
            <p>Company: <t t-esc="person.company_id.name"/></p>
        </div>
    </t>

    <form action="/persons/add" method="post">
        <label for="first_name">First Name:</label>
        <input type="text" name="first_name" required/>

        <label for="last_name">Last Name:</label>
        <input type="text" name="last_name" required/>

        <label for="birthday">Birthday:</label>
        <input type="date" name="birthday"/>

        <label for="sex">Sex:</label>
        <select name="sex">
            <option value="">Select</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="non-binary">Non-binary</option>
        </select>

        <button type="submit">Add Person</button>
    </form>

</template>
